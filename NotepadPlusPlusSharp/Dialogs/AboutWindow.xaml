<Window x:Class="NotepadPlusPlusSharp.Dialogs.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Notepad++ #"
        Width="450" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#2D2D30"
        Foreground="#CCCCCC">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="28" FontWeight="Bold" 
                   Foreground="#007ACC" Margin="0,0,0,4">
            Notepad++ #
        </TextBlock>

        <TextBlock Grid.Row="1" FontSize="14" Foreground="#808080" 
                   Margin="0,0,0,16">
            A modern Notepad++ clone built with C# and WPF
        </TextBlock>

        <TextBlock Grid.Row="2" FontSize="13" Margin="0,0,0,8">
            <Run Text="Version: 1.0.0" />
        </TextBlock>

        <TextBlock Grid.Row="3" FontSize="13" Margin="0,0,0,8" TextWrapping="Wrap">
            <Run Text="Built with .NET and AvalonEdit" />
            <LineBreak/>
            <Run Text="Text editor component: ICSharpCode.AvalonEdit" Foreground="#808080"/>
        </TextBlock>

        <TextBlock Grid.Row="4" FontSize="12" Foreground="#808080" 
                   Margin="0,8,0,16" TextWrapping="Wrap">
            This application is a feature-rich text editor inspired by Notepad++, 
            featuring syntax highlighting for 20+ languages, multi-tab editing, 
            find and replace with regex support, and a modern dark theme.
        </TextBlock>

        <Button Grid.Row="5" Content="OK" HorizontalAlignment="Right" 
                Padding="24,6" Click="OK_Click" IsDefault="True" IsCancel="True">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
