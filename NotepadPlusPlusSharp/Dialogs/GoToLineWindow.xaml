<Window x:Class="NotepadPlusPlusSharp.Dialogs.GoToLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Go To Line"
        Width="320" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#2D2D30"
        Foreground="#CCCCCC"
        KeyDown="Window_KeyDown">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="InfoText" Grid.Row="0" 
                   Text="Line number (1 - 100):" 
                   Margin="0,0,0,8" FontSize="13"/>

        <TextBox x:Name="LineNumberBox" Grid.Row="1" 
                 FontSize="14" Padding="8,6" Margin="0,0,0,12"
                 PreviewTextInput="LineNumberBox_PreviewTextInput"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Go" Click="Go_Click" Padding="24,6" Margin="0,0,8,0"
                    IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel" Click="Cancel_Click" Padding="16,6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
