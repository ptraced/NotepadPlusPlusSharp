<Window x:Class="NotepadPlusPlusSharp.Dialogs.FindReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find and Replace"
        Width="480" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#2D2D30"
        Foreground="#CCCCCC"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1C97EA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <RadioButton x:Name="FindTab" Content="Find" IsChecked="True" 
                         GroupName="Mode" Checked="FindTab_Checked"
                         FontSize="14" Margin="0,0,16,0"/>
            <RadioButton x:Name="ReplaceTab" Content="Replace" 
                         GroupName="Mode" Checked="ReplaceTab_Checked"
                         FontSize="14"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Find:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="FindTextBox" Grid.Column="1" 
                     FontSize="13" Padding="6,4"/>
        </Grid>

        <Grid x:Name="ReplacePanel" Grid.Row="2" Margin="0,0,0,8" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Replace:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="ReplaceTextBox" Grid.Column="1" 
                     FontSize="13" Padding="6,4"/>
        </Grid>

        <WrapPanel Grid.Row="3" Margin="0,4,0,12">
            <CheckBox x:Name="MatchCaseCheck" Content="Match case" Margin="0,0,16,4"/>
            <CheckBox x:Name="WholeWordCheck" Content="Whole word" Margin="0,0,16,4"/>
            <CheckBox x:Name="UseRegexCheck" Content="Regular expression" Margin="0,0,16,4"/>
            <CheckBox x:Name="WrapAroundCheck" Content="Wrap around" IsChecked="True" Margin="0,0,16,4"/>
        </WrapPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Find Previous" Click="FindPrevious_Click" 
                    Margin="0,0,8,0" Padding="12,6"/>
            <Button Content="Find Next" Click="FindNext_Click" 
                    Style="{StaticResource AccentButton}" Margin="0,0,8,0"/>
            <Button x:Name="ReplaceButton" Content="Replace" Click="Replace_Click" 
                    Margin="0,0,8,0" Padding="12,6" Visibility="Collapsed"/>
            <Button x:Name="ReplaceAllButton" Content="Replace All" Click="ReplaceAll_Click" 
                    Margin="0,0,8,0" Padding="12,6" Visibility="Collapsed"/>
            <Button Content="Count" Click="Count_Click" Padding="12,6"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Grid.Row="4" 
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   Foreground="#808080" FontSize="11"/>
    </Grid>
</Window>
